@{
  ViewData["Title"] = "Create Planet";
}

@model PlanetaryClient.Models.Planet

<h4>Add a new planet to the solar system</h4>

<div class="container">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.FunFact)
    @Html.TextBoxFor(model => model.FunFact)
    <br>
    @Html.LabelFor(model => model.Climate)
    @Html.TextBoxFor(model => model.Climate)
    <br>
    @Html.LabelFor(model => model.LifeFormDetails)
    @Html.TextBoxFor(model => model.LifeFormDetails)
    <br>
    @Html.LabelFor(model => model.Population)
    @Html.TextBoxFor(model => model.Population)
    <br>
    <br>
    <input type="submit" value="Add new planet" class="btn btn-primary"/>
  }
  
  <br>
  <p>@Html.ActionLink("Back to all planets", "Index")</p>
  
</div>